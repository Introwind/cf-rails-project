<% if signed_in? %>
	<h4>Add a review:</h4>
	<%= form_for([@product, @product.comments.build]) do |f| %>
		<p>
			<%= f.text_area :body %>
		</p>
		<p>
		<div class="rating"></div>
			<%= f.label :rating %>
		</p>
		<p>
			<%= f.submit "Leave a Review", class: "btn btn-success btn-sm"%>
		</p>
  <% end %>
<% end %>

