    <%= f.label :image_url %>
    <%= f.text_field :image_url, class: "form-control"  %>
  </div>

  <div class="field form-group">
    <%= f.label :colour %>
    <%= f.text_field :colour, class: "form-control"  %>
  </div>

  <div class="field form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: "form-control"  %>
  </div>

  <div class="actions">
    <%= f.submit(class: "btn btn-sm btn-primary") %>
  </div>

