<% @comments.each do |comment| %>
	<span class="rated pull-left" data-score="<%= comment.rating %>"></span>
    <span class="pull-right"><%= "#{time_ago_in_words(	comment.created_at)} ago" %></span><br>
    <br>
	<p><i><%= comment.user.first_name %></i></p>
    <%= comment.body %>
    <hr>
    <% end %>

<div class="digg_pagination"><%= will_paginate @comments %></div>
