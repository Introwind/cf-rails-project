<div class="container">
    <div class="row">
        <div class="col-md-2">
            <div class="btn group">
                <%= link_to 'Back', products_path, class: "btn btn-primary" %>
                <% if admin? %>
                  <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-danger" %>
                  <%= link_to 'Delete', products_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>    
                <% end %>
            </div>
        </div>

        <div class="col-md-12 well">
            <div class="col-md-4 zoom">
                <%= image_tag(@product.image_url, class: "img-responsive zoom", data: { zoom_image: @product.image_url } ) %>
            </div>
            <div class="col-md-8">
                <div class="caption-full">
                    <h4 class="pull-right">Â£ <%= sprintf('%.2f', (@product.price / 100) ) %></h4>
                    <h4><%= @product.name %></h4><hr>
                    <p><%= @product.description %></p><hr>
                    <div><%= form_tag "/payments/create" do %>
                        <%= hidden_field_tag(:product_id, @product.id) %>
                        <%= render partial: "shared/stripe_checkout_button" %>
                        <% end %></div>
                </div>
                <div class="ratings">
                    <p class="pull-right"><%= @product.comments.count %> reviews</p>
                    <p>
                    <div class="rated" data-score="<%= @product.average_rating %>"></div>
                    <%= @product.average_rating.to_i %>.0 stars
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-12 well">
            <div class="text-right">
            <%= render 'new_comment' %>
            </div>
                <h4>Product Reviews:</h4>
                <hr>
                <%= render 'comments' %>
        </div>
    </div>
</div>