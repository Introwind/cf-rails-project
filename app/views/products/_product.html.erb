<div class="col-md-3 col-xs-6">
	<h1><%= product.name %></h1>

    <% if product.created_at > 3.days.ago..Time.now %>
      <h4><span class="label label-warning">New!</span></h4>
      <% elsif product.price <= 500 %>
      <h4><span class="label label-info">Great Value!</span></h4>
      <% else %>
      <p> nothing </p>
      <br>
    <% end %>

	<p><%= truncate(product.description) %></p>
    <p><%= product.colour %></p>
    <p><%= product.price %></p>
    <%= if product.image_url.present?
      image_tag(product.image_url, class: "img-responsive")
    end %><br>
    <button class="btn btn-sm"><%= link_to 'Show', product %></button>
    <button class="btn btn-sm"><%= link_to 'Edit', edit_product_path(product) %></button>
    <button class="btn btn-sm"><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></button>
</div>
