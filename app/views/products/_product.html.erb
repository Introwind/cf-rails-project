<div class="col-md-3 col-xs-6">
  <div class="thumbnail prodgrid"><br>
   <%= if product.image_url.present?
       image_tag(product.image_url, class: "img-responsive")
    end %>
  
	 <h1><%= product.name %></h1>  
   <p><%= truncate(product.description, length: 100) %></p>
   <p><%= product.colour %></p>
   <p><%= product.price %></p>

    <%= link_to 'Show', product, class: "btn btn-primary btn-sm" %>
    <%= link_to 'Edit', edit_product_path(product), class: "btn btn-primary btn-sm" %>
    <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-sm" %>
    <% if product.created_at > 3.days.ago..Time.now %>

      <br><br><span class="label label-warning">New!</span>
      <% elsif product.price <= 500 %>
      <br><br><span class="label label-info">Great Value!</span>
      <% else %>
    <% end %>
  </div>
</div>
